<?xml version="1.0" encoding="utf-8" ?>
<!--
	LOTUS FEATURE ASSETS
-->
<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:set="http://www.sitecore.net/xmlconfig/set/">
    <sitecore>
        <settings>
            <setting name="Lotus.Foundation.Assets.CDN.Redirect" value="$scheme://cdn.$domain" patch:i="*[@name='Lotus.Foundation.Assets.CDN.Redirect']" />
        </settings>

        <lotus.assets>
            <repository type="Lotus.Foundation.Assets.Repository.Repository, Lotus.Foundation.Assets">
                <paths hint="raw:MapPath">
                    <path type="Lotus.Foundation.Assets.Paths.Folder.FolderPath, Lotus.Foundation.Assets">
                        <key>folder.js/wine/Oomph</key>
                        <!-- separate with | -->
                        <targets>js/wine/Oomph</targets>
                        <!-- supports full-path (c:/inetpub/site/css/whatever.css), relative (/css/whatever.css or ~/css/whatever.css), name (whatever.css) or any valid regex (.*) -->
                        <filenames>.*</filenames>
                        <ignore>|</ignore>
                        <!-- supports m (minute), h (hour) and d (day) -->
                        <expireCache>2h</expireCache>
                    </path>
                    
                    <path type="Lotus.Foundation.Assets.Paths.File.FilePath, Lotus.Foundation.Assets">
                        <key>file.script-rogers.js</key>
                        <!-- any aliases of the file - separate with | -->
                        <targets>script-rogers.js</targets>
                        <!-- leading path to file -->
                        <parentPath>.*</parentPath>
                        <!-- supports m (minute), h (hour) and d (day) -->
                        <expireCache>3h</expireCache>
                    </path>
                </paths>
            </repository>
        </lotus.assets>
    </sitecore>
</configuration>